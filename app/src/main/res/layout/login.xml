<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.LoginActivity"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<!--登录界面-->
    <RelativeLayout

        android:id="@+id/loginbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5fccffff">
        <TextView
            android:layout_marginTop="100dp"
            android:id="@+id/iv_headportrait"
            android:layout_centerHorizontal="true"
            android:text="@string/appname"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <EditText

            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/et_loginname"
            android:layout_below="@id/iv_headportrait"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="@string/et_hint_loginname"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="15sp"
            android:background="@drawable/shape"/>



        <EditText
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/et_loginpassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="@string/et_hint_loginpassword"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:maxLength="16"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:background="@drawable/shape"
            android:layout_below="@+id/et_loginname" />


        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="10dp"
            android:layout_below="@id/et_loginpassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_login"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/myshape"/>
        <Button
            android:layout_marginTop="150dp"
            android:id="@+id/btn_forregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_registerapp"
            android:background="@color/lucency"
            android:layout_below="@id/btn_login"
            android:textColor="#3f000000"
            android:layout_centerHorizontal="true" />
        <Button

            android:id="@+id/btn_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_forgetpassword"
            android:layout_below="@id/btn_forregister"
            android:layout_centerHorizontal="true"
            android:background="@color/lucency"
            android:textColor="#3f000000"/>

    </RelativeLayout>
</LinearLayout>